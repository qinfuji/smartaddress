<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smartaddress.demo.dao.UserDao">
  <resultMap id="BaseResultMap" type="com.smartaddress.demo.po.User">
    <id column="id" jdbcType="VARCHAR" property="id" />
    <result column="name" jdbcType="VARCHAR" property="name" />
    <result column="password" jdbcType="VARCHAR" property="password" />
    <result column="status" jdbcType="VARCHAR" property="status" />
  </resultMap>
  <sql id="Base_Column_List">
    id, name, password, status
  </sql>

  <insert id="save" parameterType="com.smartaddress.demo.po.User">
    <selectKey keyProperty="id" resultType="string" order="BEFORE">
      select uuid() as id from dual
    </selectKey>
    insert into user_t (id, name, password, 
      status)
    values (#{id,jdbcType=VARCHAR}, #{name,jdbcType=VARCHAR}, #{password,jdbcType=VARCHAR},
      #{status,jdbcType=VARCHAR})
  </insert>

  <insert id="batchSave">
    <selectKey keyProperty="id" resultType="string" order="BEFORE">
      select uuid() as id from dual
    </selectKey>
    insert into user_t
    (<include refid="Base_Column_List"/>)
    values 
    <foreach collection="userList" item="item" index="index"  separator=",">
      ( #{id , jdbcType=VARCHAR},
        #{item.name,jdbcType=VARCHAR},
        #{item.password,jdbcType=VARCHAR},
        #{item.status,jdbcType=VARCHAR})
    </foreach>
  </insert>

  <update id="update" parameterType="com.smartaddress.demo.po.User">
    update user_t
    <set>
      <if test="name != null">
        name = #{name,jdbcType=VARCHAR},
      </if>
    </set>
    where id = #{id,jdbcType=VARCHAR}
  </update>

  <update id="deleteById" parameterType="string">
    update user_t
    status = 'deleted'
    where id = #{id,jdbcType=VARCHAR}
  </update>

  <update id="updatePassword" parameterType="string">
    update user_t
    password = #{password,jdbcType=VARCHAR},
    where id = #{id,jdbcType=VARCHAR}
  </update>


  <select id="findAll" resultMap="BaseResultMap" >
    Select
    <include refid="Base_Column_List"/>
    from user_t where 1=1
    <if test="qo != null and qo.name !=null and qo.name.length>0">
       and name = ${qo.name}
    </if>
    <if test="qo != null and qo.status !=null and qo.status.length>0">
      and status = ${qo.status}
    </if>
  </select>

</mapper>